      <include name="../jbr!/jdk.zipfs"/>
      <include name="../jbr!/jogl.all"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.jbr-11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.jbr-11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.jbr-11"/>
  <property name="idea.home" value="C:\Program Files\JetBrains\IntelliJ IDEA Community Edition 2021.1.2"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_ch.qos.logback:logback-classic:1.2.3.classpath">
    <pathelement location="${path.variable.maven_repository}/ch/qos/logback/logback-classic/1.2.3/logback-classic-1.2.3.jar"/>
  </path>
  
  <path id="library.maven:_ch.qos.logback:logback-core:1.2.3.classpath">
    <pathelement location="${path.variable.maven_repository}/ch/qos/logback/logback-core/1.2.3/logback-core-1.2.3.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.13.2.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.13.2/junit-4.13.2.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.maven:_org.mockito:mockito-all:1.9.5.classpath">
    <pathelement location="${path.variable.maven_repository}/org/mockito/mockito-all/1.9.5/mockito-all-1.9.5.jar"/>
  </path>
  
  <path id="library.maven:_org.projectlombok:lombok:1.18.8.classpath">
    <pathelement location="${path.variable.maven_repository}/org/projectlombok/lombok/1.18.8/lombok-1.18.8.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-api:1.7.25.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-api/1.7.25/slf4j-api-1.7.25.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
      <include name="forms_rt.jar"/>
    </fileset>
    <fileset dir="${idea.home}/plugins/java/lib">
      <include name="javac2.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_calculator.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.calculator" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.calculator" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>

  <target name="jar" depends="build.modules" description="create jar"/>
</project>